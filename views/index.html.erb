<!DOCTYPE HTML>
<head>
	<title>Idea app - Home</title>
	<link rel="stylesheet" type="text/css" href="/idea_app.css">
</head>
<body>
	<h1>Idea app</h1>
	<%= @header %>
	<div class="descr-text">
		This is a dynamic app to upload ideas to. 
	</div>
	<table class="idea-table">
		<tr> <td colspan="3">List of ideas</td></tr>
		<tr>
			<td>Date</td>
			<td>Number</td>
			<td>Name</td>
			<td>Description</td>
			<td>Author</td>
			<td></td>
		</tr>
		<tr>
			<% @ideas.each do |idea, elements|  %>
			<tr>
				<% elements["id"] = idea.to_s %>
				<td><%= elements["date_modified"]%></td>
				<td><a href="/idea/<%= elements["id"].to_s %>.html"><%= elements["id"]%></td>
				<td><%= elements["title"]%></td>
				<td><%= elements["description"]%></td>
				<td><%= elements["author"]%></td>
			</tr>
			<% end %>
		 </tr>
	</table>
</body>